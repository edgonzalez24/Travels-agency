extends ../layout/index
block contenido
  main.container.mt-5
    h1.text-center= pagina

    .row
      .col-md-12
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        .row.testimoniales
          each testimonial in testimoniales
            .col-mg-6.col-lg-4.mb-4
              .card 
                .card-body  
                  blockquote.blockquote
                  p.mb-0
                    | #{testimonial.mensaje}
                  footer.blockquote-footer
                    |#{testimonial.nombre}
      .col-md-12
        h2.text-center Agregar testimonial
        if(errores)
          each error in errores
            .alert.alert-danger.text-center=error.mensaje
          
        .row.justify-content-center 
          .col-md-8
            form(action="/testimoniales" , method="POST")
              .form-group
                label(for="") Nombre
                input(id="nombre" , class="form-control", type="text" , placeholder="Escribe tu nombre" , name="nombre", value=nombre)
              .form-group
                label(for="") Correo Electronico
                input(id="correo" , class="form-control", type="email" , placeholder="Escribe tu correo" , name="correo", value=correo) 
              .form-group
                label(for="") Mensaje
                textarea#mensaje(name="mensaje", rows="3", class="form-control", placeholder="Escribe tu mensaje")=mensaje
                br
                input.btn.btn-success.btn-block(type="submit" , value="Agregar")  
                
          